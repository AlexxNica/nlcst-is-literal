{
  "name": "nlcst-is-literal",
  "version": "1.0.0",
  "description": "Check whether an NLCST node is meant literally",
  "license": "MIT",
  "keywords": [
    "nlcst",
    "retext",
    "util",
    "utility",
    "literal",
    "word"
  ],
  "dependencies": {
    "nlcst-to-string": "^1.0.0"
  },
  "repository": "wooorm/nlcst-is-literal",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "bail": "^1.0.1",
    "browserify": "^11.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.3.0",
    "remark-cli": "^2.1.0",
    "remark-preset-wooorm": "^1.0.0",
    "retext": "^1.0.0-rc.3",
    "tape": "^4.6.2",
    "unist-util-visit": "^1.0.0",
    "xo": "^0.17.1"
  },
  "scripts": {
    "test-api": "node test",
    "test-coverage": "istanbul cover tape test.js",
    "test-travis": "npm run test-coverage",
    "test": "npm run test-api",
    "lint": "xo",
    "make": "npm run lint && npm run test-coverage",
    "bundle": "browserify index.js --no-builtins -s nlcstIsLiteral > nlcst-is-literal.js",
    "postbundle": "esmangle nlcst-is-literal.js > nlcst-is-literal.min.js",
    "build-md": "remark . --quiet --frail --output",
    "build": "npm run bundle && npm run build-md"
  },
  "xo": {
    "space": true,
    "ignore": [
      "nlcst-is-literal.js"
    ]
  },
  "remarkConfig": {
    "presets": "wooorm"
  }
}
